<% content_for :page_title do %>
  <title>Taxes inc - Contact</title>
<% end %>

<h1 style="text-align:center;"><%= t('contact.contact_h1') %></h1>
<hr>
<div class="container">
    <div class="contact-form col-sm-8">
      <%= form_tag("/contact", method: 'post', id: 'new_contact', remote: true) do %>

          <div class="form-group">
              <i class="glyphicon glyphicon-briefcase"></i>
              <input class="form-control" placeholder="<%= t('contact.form_company_name') %>" type="text" name="contact[company_name]" id="contact_company_name">
          </div>
          <div class="form-group">
            <i class="glyphicon glyphicon-user"></i>
            <input required="required" class="form-control" placeholder="<%= t('contact.form_firstname') %>" type="text" name="contact[first_name]" id="contact_first_name">
          </div>
          <div class="form-group">
            <i class="glyphicon glyphicon-user"></i>
            <input required="required" class="form-control" placeholder="<%= t('contact.form_lastname') %>" type="text" name="contact[last_name]" id="contact_last_name">
          </div>
          <div class="form-group">
            <i class="glyphicon glyphicon-phone"></i>
            <input required="required" class="form-control" placeholder="<%= t('contact.form_phone') %>" type="text" name="contact[phone]" id="contact_phone">
          </div>
          <div class="form-group">
            <i class=" glyphicon glyphicon-envelope"></i>
            <input required="required" class="form-control" placeholder="<%= t('contact.form_email') %>" type="text" name="contact[email]" id="contact_email">
          </div>
          <div class="form-group">
            <textarea as="text" class="form-control" required="required" placeholder="<%= t('contact.form_comments') %>" name="contact[message]" id="contact_message"></textarea>
          </div>
          <div style="text-align:center;" class="form-group">
            <input type="submit" class="btn btn-primary" name="commit" value="<%= t('contact.form_submit') %>" class="form-control btn btn-dark">
          </div>
        <!-- </form> -->
        <% end %>    
    </div> 

    <div class="col-sm-4">
        <div style="text-align:left;">
            <address>
                <strong>Taxes inc</strong>
                <br>11 nw 1 ct
                <br>Miami , FL 00000
                <br>
            </address>
            <address>
                <abbr title="Phone">P:</abbr>000-000-0000
                <br>
                <abbr title="Email">F:</abbr>000-000-0000
                <br>
                <abbr title="Email">E:</abbr> <a href="mailto:#"></a>
            </address>
        </div>
    </div>     
<hr>
    <div class="col-sm-12">
    <hr>
            <iframe src="" width="100%" height="100%" frameborder="" style="margin-bottom:30px; height: 250px; border:2px solid" allowfullscreen></iframe>
    </div>

</div>